<h3>Name: <%= @store.name %></h3>
<h3>Brand: <%= @store.brand %></h3>
<br><br>
<form action="/stores/<%= @store.id %>" method="post" class="left delete-form">
 <input name="_method" type="hidden" value="delete">
 <button type="submit" class="btn red right">Delete</button>
</form><br><br>

<h5>Update Store</h5>
<form action="/stores/<%= @store.id() %>" method="post" required>
  <input name="_method" type="hidden" value="patch">
  <label for="new-name">Update Name</label>
  <input id="new-name" type="text" name="new-new-name" required>

  <label for="new-brand">Update Brand</label>
  <input id="new-brand" type="text" name="new-new-brand" required>

  <button type="submit" class="btn">Update</button>
</form><br><br>

<% if @shoes.any? %>
  <ul>
    <% @shoes.each() do |shoe| %>
    <li><a href="/shoes/<%= shoe.id %>"><%= shoe.name %> - <%= shoe.brand %></a></li>
    <% end %>
  </ul>
  <% else %>
    <h4>There are no shoes at this store</h4>
  <% end %>
